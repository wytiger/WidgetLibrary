<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.wytiger.widgetlibrary.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.wytiger.widget.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/icon_demo"
                app:civ_border_color="#ffff0000"
                app:civ_border_width="2dp"/>

            <com.wytiger.widget.RoundCornerImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/icon_demo"
                app:roundHeight="15dp"
                app:roundWidth="15dp"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tvDialog"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            android:text="Dialog"/>

        <TextView
            android:id="@+id/tvLoadingDialog"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent"
            android:text="LoadingDialog"/>


        <TextView
            android:id="@+id/tvBanner"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent"
            android:text="Banner"/>

        <TextView
            android:id="@+id/tvAdapter"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent"
            android:text="Adapter"/>

        <TextView
            android:id="@+id/tvRefresh"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent"
            android:text="Refresh"/>

        <TextView
            android:id="@+id/tvRefresh2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent"
            android:text="Refresh2"/>


    </LinearLayout>
</ScrollView>
